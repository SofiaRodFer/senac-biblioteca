@model Livro
@{
    ViewData["Title"] = "Edição de Livros";
}

<h1 class="row justify-content-md-center">Edição de Livro</h1>

<div class="row justify-content-md-center">
    <form asp-action="Edicao" method="POST" class="col-md-4">
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label asp-for="Titulo">Titulo</label>
            <input asp-for="Titulo" class="form-control"/>
        </div>
        <div class="form-group">
            <label asp-for="Autor">Ator</label>
            <input asp-for="Autor" class="form-control"/>
        </div>
        <div>
            <label asp-for="Ano">Ano</label>
            <input asp-for="Ano" class="form-control"/>
        </div>
        <input type="submit" value="Salvar" class="btn btn-primary form-control"/>
    </form>
    <p class="text-danger row justify-content-md-center">@ViewData["Mensagem"]</p>
</div>