@model Usuario
@{
    ViewData["Title"] = "Edição de Usuário";
}
<h1 class="row justify-content-md-center">Edição de Usuário</h1>
<div class="row justify-content-md-center">
    <form asp-action="Edicao" method="POST" class="col-md-4">
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label asp-for="Username">Username</label>
            <input asp-for="Username" class="form-control"/>
        </div>
        <div class="form-group">
            <label asp-for="Senha">Senha</label>
            <input asp-for="Senha" type="password" class="form-control"/>
        </div>
        <input type="submit" value="Salvar" class="btn btn-primary"/>
    </form>
</div>
<p class="text-danger row justify-content-md-center">@ViewData["Mensagem"]</p>